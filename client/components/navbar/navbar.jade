  a(href='/') 
    img(src='../assets/images/filler_Logo.jpg' alt='Jarmone Davis Media' height="50px")
  
  #loader.overlay-loader.pull-right.hidden-xs
    img.loader-icon(src="../assets/images/cog03.svg", data-cog="cog03")
  span#mobileLoader.overlay-loader.pull-right.mobile-loader.visible-xs
    img.loader-icon(src="../assets/images/cog03.svg", data-cog="cog03")
