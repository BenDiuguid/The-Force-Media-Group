div(ng-controller='NavbarController')  
  md-toolbar
    div(layout="row" layout-padding layout-align="space-between center")
      div
        md-button(ng-repeat='item in nav.menu', ui-sref-active='active' ui-sref='{{item.state}}') {{item.title}}
        md-button(ng-show='nav.isAdmin()', ui-sref-active='active' ui-sref='admin') Admin
        
      div
        md-button(ng-hide='nav.isLoggedIn()', ui-sref-active='active' ui-sref='signup') Sign up
        md-button(ng-hide='nav.isLoggedIn()', ui-sref-active='active' ui-sref='login') Login
        span(ng-show='nav.isLoggedIn()')
          p.navbar-text Hello {{ nav.getCurrentUser().name }}
        md-button(ng-show='nav.isLoggedIn()', ui-sref-active='active' ui-sref='settings')
          span.glyphicon.glyphicon-cog
        md-button(ng-show='nav.isLoggedIn()' ui-sref='logout') Logout 
br
  
