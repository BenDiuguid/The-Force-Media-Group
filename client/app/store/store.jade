navbar  
.container
  .row
    .col-lg-12.text-right
      button.crestBackground.btn.btn-default.btn-lg#cart(class="glyphicon glyphicon-shopping-cart" ng-click="checkCart()") 
  .row
    div(ng-repeat="item in items")
      .col-lg-3.col-md-4.col-sm-4  
        .panel.panel-default
          .panel-body.text-center
            img(ng-src="{{item.Picture}}")
            h4.row.text-center
              {{item.Name}} 
            h5.row.text-center.crestColor
              |${{item.Price}}
            .row.text-center
              button.crestBackground.btn.btn-default(ng-click="addToCart()") 
                |Add to Cart
footer.cloudyBackground
